# API Configuration
# API Configuration
VITE_API_URL=http://localhost:8000
VITE_API_V1=/api/v1

# Development Mode
# Set to 'false' in production
VITE_USE_PROXY=true

# Mobile Development (optional)
# For testing on mobile devices in LAN
# Example: VITE_API_URL=http://192.168.1.50:8000
# LOCAL_DEV_IP=192.168.1.50
# DEV_CLIENT_PORT=5173

# WebSocket Configuration
VITE_WS_URL=ws://localhost:8000
VITE_WS_RECONNECT_INTERVAL=3000
VITE_WS_MAX_RECONNECT_ATTEMPTS=10

# Sentry (Error Tracking) - optional
# ==============================================
# SENTRY ERROR TRACKING (Producci√≥n)
# ==============================================
# Obtener DSN en https://sentry.io
VITE_SENTRY_DSN=
VITE_SENTRY_RELEASE=1.0.0
VITE_SENTRY_ENVIRONMENT=development
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1

# Feature Flags
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE_MODE=true

# Build Configuration
# These are typically set by build scripts
# VITE_BUILD_TARGET=es2015
# VITE_MINIFY=terser
VITE_API_V1=/api/v1

# WebSocket Configuration
VITE_WS_URL=ws://localhost:8000

# Environment
VITE_ENV=development

# Features
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=false
