# Environment
ENVIRONMENT=development
DEBUG=true

# Server
HOST=127.0.0.1
PORT=8000

# Security - JWT
SECRET_KEY=change-this-in-production-to-a-strong-32bytes-minimum-secret
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Security - CSRF
CSRF_SECRET=change-this-in-production-to-a-strong-secret
CSRF_TOKEN_EXPIRE_MINUTES=60

# Security - API Key
API_KEY_ENABLED=false
API_KEY_SECRET=change-this-api-key-if-enabled

# Security - Headers
# X-Powered-By control
SEND_X_POWERED_BY=true
POWERED_BY_HEADER=Inventario-Backend

# Database (sync driver enforced by app)
DATABASE_URL=postgresql+psycopg2://admin:admin123@localhost:5432/inventario
DB_HOST=localhost
DB_PORT=5432
DB_NAME=inventario
DB_USER=admin
DB_PASSWORD=admin123

# Database Pool Config
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# CORS
# Comma-separated origins. If empty, defaults are used by environment in settings.
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000

# Trusted Hosts
# Comma-separated hosts
TRUSTED_HOSTS=localhost,127.0.0.1,testserver

# Rate Limiting (global defaults)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_JSON_FORMAT=true

# Redis (optional; required for health check to pass as healthy)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=

# Health Checks
HEALTH_CHECK_ENABLED=true
DB_HEALTH_CHECK_ENABLED=true
REDIS_HEALTH_CHECK_ENABLED=true

# Monitoring (placeholders for future phases)
PROMETHEUS_ENABLED=true
METRICS_ENABLED=true
