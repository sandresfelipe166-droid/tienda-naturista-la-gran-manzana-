# Environment
ENVIRONMENT=development
DEBUG=true

# Server
HOST=127.0.0.1
PORT=8000

# Security - JWT
SECRET_KEY=change-this-in-production-to-a-strong-32bytes-minimum-secret
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Security - CSRF
CSRF_SECRET=change-this-in-production-to-a-strong-secret
CSRF_TOKEN_EXPIRE_MINUTES=60

# Security - API Key
API_KEY_ENABLED=false
API_KEY_SECRET=change-this-api-key-if-enabled

# Security - Headers
# X-Powered-By control
SEND_X_POWERED_BY=true
POWERED_BY_HEADER=Inventario-Backend
SSL_ENABLED=false

# Security - Content Security Policy
CSP_ENABLED=false
CSP_DEFAULT=default-src 'self'; frame-ancestors 'none'; base-uri 'self'

# Database (sync driver enforced by app)
DATABASE_URL=postgresql+psycopg2://admin:admin123@localhost:5432/inventario
DB_HOST=localhost
DB_PORT=5432
DB_NAME=inventario
DB_USER=admin
DB_PASSWORD=admin123

# Database Pool Config
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_CONNECT_TIMEOUT=10
DB_APP_NAME=InventarioBackend

# Database Schema Management
CREATE_SCHEMA_ON_STARTUP=false

# CORS
# Comma-separated origins. If empty, defaults are used by environment in settings.
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://localhost:5173
CORS_ALLOW_ORIGIN_REGEX=

# Trusted Hosts
# Comma-separated hosts (use "*" for all in development)
TRUSTED_HOSTS=localhost,127.0.0.1,testserver
ALLOW_ALL_HOSTS_DEV=true

# Mobile Development (optional - for LAN testing)
LOCAL_DEV_IP=
DEV_CLIENT_PORT=5173
LOCAL_BACKEND_HOST=
ALLOW_MOBILE_SCHEMES_DEV=true

# Rate Limiting (global defaults)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_USE_REDIS=false
RATE_LIMIT_REDIS_PREFIX=ratelimit

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_JSON_FORMAT=true
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5

# Redis (optional; required for distributed rate limiting and cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SOCKET_TIMEOUT=1.0
REDIS_HEALTH_TIMEOUT=1.0

# SMTP / Email Configuration (for password reset)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=true
ALERT_EMAILS=

# Password Reset
PASSWORD_RESET_EXPIRE_MINUTES=15

# Scheduler (background tasks)
SCHEDULER_ENABLED=false
SCHEDULER_INTERVAL_HOURS=24
SCHEDULER_TIMEZONE=UTC

# Health Checks
HEALTH_CHECK_ENABLED=true
DB_HEALTH_CHECK_ENABLED=true
REDIS_HEALTH_CHECK_ENABLED=false

# Observability & Monitoring
PROMETHEUS_ENABLED=false
METRICS_ENABLED=false

# Backup Configuration
BACKUP_ENABLED=false

# Sentry (Error Tracking) - optional
# ==============================================
# SENTRY ERROR TRACKING (Producci√≥n)
# ==============================================
# Obtener DSN en https://sentry.io
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1  # 10% de transacciones
SENTRY_RELEASE=1.0.0
SENTRY_TRACES_SAMPLE_RATE=0.1
